<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorlightYello"
    tools:context=".FoodList">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Menu"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="#000000"
        android:textStyle="bold"
        />
    <!-- A RecyclerView with some commonly used attributes -->
    <android.support.v7.widget.RecyclerView
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/line"
        android:id="@+id/recyle_food_list"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scrollbars="vertical" />

    <LinearLayout
        android:id="@+id/food_L3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/line1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:id="@+id/L1"
            android:visibility="invisible"
            android:background="@drawable/line1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <TextView
                android:visibility="invisible"
                android:id="@+id/text_Res1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:text=" 뚝배기 "
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"
                />
            <TextView
                android:visibility="invisible"
                android:id="@+id/text_price1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text=" 1000원 "
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/bt_food_list1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/linepink"
                android:text=" + "
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"
                />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/L2"
                android:visibility="invisible"
                android:background="@drawable/line1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <TextView
                    android:visibility="invisible"
                    android:id="@+id/text_Res2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text=" 뚝배기 "
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:visibility="invisible"
                    android:id="@+id/text_price2"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=" 1000원 "
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />
                <Button
                    android:id="@+id/bt_food_list2"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/linepink"
                    android:text=" + "
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/L3"
                android:visibility="invisible"
                android:background="@drawable/line1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <TextView
                    android:visibility="invisible"
                    android:id="@+id/text_Res3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text=" 뚝배기 "
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:visibility="invisible"
                    android:id="@+id/text_price3"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=" 1000원 "
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />
                <Button
                    android:id="@+id/bt_food_list3"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/linepink"
                    android:text=" + "
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:gravity="right"
                android:layout_gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_weight="1"
                android:text="주문총액 :"
                android:textStyle="bold"/>
            <TextView
                android:gravity="center"
                android:layout_weight="3"
                android:layout_gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text=""
                android:id="@+id/tv_food_list_total_price"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/Pur_bt1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#c3999ea1"
                android:text=" 초기화 "
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Pur_bt2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#fccbac"
                android:text=" 주문하기 "
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>



    </LinearLayout>



</LinearLayout>