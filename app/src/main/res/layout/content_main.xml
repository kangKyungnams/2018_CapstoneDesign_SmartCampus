<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:id="@+id/content_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#f9f7ea"
            android:id="@+id/linearMain"
            >


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="127dp"
                    android:src="@drawable/d12345"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=" 강의 바로가기"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:background="#f9f7ea"
                    />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:id="@+id/course_Spinner"
                    android:layout_marginBottom="10dp"
                    android:background="#ffffff">
                </Spinner>

            </LinearLayout>


            <RelativeLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/main_L1"
                    android:layout_width="193dp"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/course_button2"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:background="#00de5c"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="강의 정보"
                        android:gravity="center"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_toRightOf="@id/main_L1"
                    android:orientation="vertical"
                    android:id="@+id/main_L2"
                    android:layout_width="193dp"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/restaurant_button"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:background="#f5ab00"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="식당 정보"
                        android:layout_weight="1"
                        android:gravity="center"/>
                    <Button
                        android:id="@+id/my_button"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:background="#3301c8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="My"
                        android:gravity="center"
                        android:layout_weight="1"/>
                </LinearLayout>


            </RelativeLayout>








        </LinearLayout>





    </RelativeLayout>


</android.support.constraint.ConstraintLayout>