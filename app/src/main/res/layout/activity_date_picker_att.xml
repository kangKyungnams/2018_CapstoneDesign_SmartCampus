<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffef"
    tools:context="com.capston.iceamericano.smartcampus.DatePickerAtt">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="캡스톤 디자인1"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="@color/colorPrimaryDark"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="17dp">

        <!--CalendarView
            android:layout_width="match_parent"
            android:layout_height="100dp">
        </CalendarView-->
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="17dp">
        <TextView
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="1231232123"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:id="@+id/txt_TextDateTime" />
        <Button
            android:layout_marginStart="40dp"
            android:id="@+id/txt_ButtonDateTime"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="날짜별 출결 확인"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="17dp"/>


    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="#ffffff"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="NO."
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="3"
                android:gravity="center"
                android:textColor="#000000"
                android:textStyle="bold"/>
            <TextView
                android:text="이 름"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:textColor="#000000"
                android:textStyle="bold"/>
            <TextView
                android:text="학 번"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:textColor="#000000"
                android:textStyle="bold"/>
            <TextView
                android:text="출결 현황"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:textColor="#000000"
                android:textStyle="bold"/>
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/studentListView"
            android:dividerHeight="5dp"
            android:divider="#ffffff">


        </ListView>

    </LinearLayout>
</LinearLayout>
