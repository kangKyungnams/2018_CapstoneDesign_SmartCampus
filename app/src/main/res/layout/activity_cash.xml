<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Cash">




    <LinearLayout
        android:background="#f2f2f2"
        android:id="@+id/food_L3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 충전 금액 : "
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="#f2f2f2" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#000000"
                android:background="#ffffff"
                android:id="@+id/ed_cash_charge"
                android:inputType="number"/>
            <Button
                android:layout_marginLeft="28dp"
                android:layout_gravity="right"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="금액 초기화"
                android:id="@+id/bt_cash_clear"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_weight="1"
                android:id="@+id/bt_account"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text=" 계좌 확인 "
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/linegray"
                android:layout_marginRight="10dp"/>
            <Button
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:id="@+id/bt_cash_charge"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text=" 충전 하기 "
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/lineblue" />

        </LinearLayout>


    </LinearLayout>



</LinearLayout>