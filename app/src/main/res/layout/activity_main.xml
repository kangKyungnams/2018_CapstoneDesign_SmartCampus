<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.capston.iceamericano.smartcampus.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f9f7ea"
        >

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:text="SMART CAMPUS"
            android:textColor="#56524e"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@color/colorPrimary" />
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="127dp"
                android:src="@drawable/d11"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" 강의 바로가기"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="#f9f7ea"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:id="@+id/course_Spinner"
                android:layout_marginBottom="10dp"
                android:background="#ffffff">
            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/main_L1"
                android:layout_width="193dp"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/course_button2"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:background="#04a145"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="강의 정보"
                    android:gravity="center"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_toRightOf="@id/main_L1"
                android:orientation="vertical"
                android:id="@+id/main_L2"
                android:layout_width="193dp"
                android:layout_height="match_parent">
                <Button
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:background="#f5ab00"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="식당 정보"
                    android:layout_weight="1"
                    android:gravity="center"/>
                <Button
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:background="#3301c8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="내 정보"
                    android:gravity="center"
                    android:layout_weight="1"/>
            </LinearLayout>


        </RelativeLayout>








    </LinearLayout>


</RelativeLayout>
