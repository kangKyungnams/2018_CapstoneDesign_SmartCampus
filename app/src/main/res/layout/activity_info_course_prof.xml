<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".InfoCourseProf">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/lecture_info_courseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="#f9f7ea"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/lecture_info_courseID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="#f9f7ea"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:background="#dadada"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical">
        <LinearLayout
            android:background="@color/colorGray"
            android:layout_marginTop="8dp"

            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="이수 구분"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="#ffae7b"
                />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="학 점"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="#ffae7b"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="시 간"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="#ffae7b"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textColor="#000000"
                android:background="#ffffff"
                android:id="@+id/lecture_info_type"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="15dp"
                android:textColor="#000000"
                android:background="#ffffff"
                android:id="@+id/lecture_info_credit"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="10dp"
                android:textColor="#000000"
                android:background="#ffffff"
                android:id="@+id/lecture_info_professor"
                />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/L2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/lecture_info_classroom"
                android:background="#ffffff"
                />
            <Button
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="위치 안내"
                android:drawableLeft="@drawable/ic_map_black_36dp"
                android:background="@drawable/linepink"
                android:gravity="center"
                android:layout_weight="1.5"
                android:id="@+id/btn_navi2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_below="@id/L2"
            android:orientation="horizontal"
            android:id="@+id/L1"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <Button
                android:id="@+id/bt_info_course_attCheck"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/linepink"
                android:drawableTop="@drawable/ic_people_black_48dp"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="출결 확인"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"

                />

            <Button
                android:id="@+id/bt_info_course_noticeEnlroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/linepink"
                android:drawableTop="@drawable/ic_chat_black_48dp"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="공지 등록"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>




    </RelativeLayout>


</LinearLayout>

</RelativeLayout>
